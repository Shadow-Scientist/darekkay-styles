{
  "name": "@darekkay/styles",
  "description": "My shared CSS styles",
  "version": "1.1.0",
  "author": "Darek Kay <hello@darekkay.com> (https://darekkay.com/)",
  "bugs": {
    "url": "https://github.com/darekkay/darekkay-styles/issues",
    "email": "hello@darekkay.com"
  },
  "dependencies": {},
  "devDependencies": {
    "a11y-contrast": "1.0.0",
    "copyfiles": "2.3.0",
    "ejs": "3.1.3",
    "jest": "26.2.2",
    "lodash": "4.17.19",
    "node-sass": "4.14.1",
    "npm-run-all": "4.1.5",
    "onecolor": "3.1.0",
    "prettier": "2.0.5"
  },
  "files": [
    "src",
    "dist"
  ],
  "homepage": "https://github.com/darekkay/darekkay-styles",
  "keywords": [
    "css",
    "darekkay",
    "styles"
  ],
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/darekkay/darekkay-styles.git"
  },
  "scripts": {
    "build": "run-s build:**",
    "build:default": "node-sass src/_all.scss dist/css/styles.css --output-style compressed",
    "build:template": "node-sass src/_template.scss dist/css/styles-template.css --output-style compressed",
    "build:colors": "node internals/scripts/list-colors/list-colors.js",
    "build:docs": "copyfiles -f public/* dist/",
    "ci": "npm run test",
    "format": "prettier --write .",
    "lint:colors": "npm run build:colors && a11y-contrast public/color-palette.json --min-ratio-3=40 --min-ratio-4.5=50 --min-ratio-7=70",
    "test": "jest && npm run lint:colors"
  }
}
